direct child selevctor


<div id="outer">
    <p>this is para1</p>
    <p>this is para2</p>
    <div id="inner">
    <p>this is para3</p>
    <p>this is para4</p>
    </div>
    <p>this is para5</p>
</div>


#outer > p{

}

#inner > p{
}



sibling selector


adjacent sibling  (+)
all sibling  (~)

<div></div>
<p>p1</p>
<p>p2</p>
<p>p3</p>
<p>p4</p>
<div id="inner">
<p>p5</p>
<p>p6</p>
</div>


adjacent sibling ------
div + p {        //div ke baad ka pehla pragaraph hi select krega
  property:value
}

all sibling -------------------------
div ~ p{
  property:value //selects p1,p2,p3,p4
}


