rotate3d(x,y,z,angle);
rotate(0,0,1,30deg);           // rotateZ(30deg)
rotate(0,0,-1,30deg);           // rotateZ(-30deg)

//0 means x axis pr rotate nhi krna hai
// 1 means z axis pr rotate  krna hai




rotate(0,1,0,30deg);           // rotateY(30deg)
rotate(1,0,0,30deg);           // rotateX(30deg)

rotate(1,1,-1,30deg);           // rotateY(30deg),rotateZ(30deg),rotateX(-30deg)


rotate(-1,-1,-1,30deg);           // rotateY(-30deg),rotateZ(-30deg),rotateX(-30deg)

rotate(1,1,1,30deg);           // rotateY(30deg),rotateZ(30deg),rotateX(30deg)


